// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  color       String?
  completed   Boolean @default(false)
  email       String
}

model User {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  password    String
  displayName String?
}
